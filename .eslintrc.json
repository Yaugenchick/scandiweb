{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:prettier/recommended",
        "plugin:react-hooks/recommended" 
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prettier/prettier": ["error", {
            "endOfLine":"auto"
        }],
        "no-plusplus": "off",
        "no-const-assign": "off",
        "no-else-return": "off",
        "consistent-return": "off",
        "func-names": "off",
        "no-shadow": "off",
        "one-var": "off",
        "prefer-const": "off",
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4]
    }
}
